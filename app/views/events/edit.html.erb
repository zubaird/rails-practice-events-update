<h1>Edit Event</h1>

<%= link_to "Back", events_path %>

<%= form_for @event do |f| %>
<p>
  <%= f.label :description %><br/>
  <%= f.text_field :description, autofocus: true %>
</p>
<p>
  <%= f.label :date %><br/>
  <%= f.date_field :date %>
</p>
<p>
  <%= f.label :capacity %><br/>
  <%= f.number_field :capacity %>
</p>
<p>
  <label>
    <%= f.check_box :requires_id %>
    Requires ID
  </label>
</p>
<p>
  <%= f.label :directions %><br/>
  <%= f.text_area :directions %>
</p>
<p>
  <%= f.submit %>
</p>
<% end %>
